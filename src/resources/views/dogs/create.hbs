            <label for="name">Tên chó</label>
            <input type="text" class="form-control" id="name" placeholder="Tên chó" name="name">
        </div><div class="form-group">
            <label for="image">Ảnh</label>
            <input type="text" class="form-control" id="image" placeholder="link ảnh" name="image">
        </div><div class="form-group">
            <label for="description">THông tin chi tiết về chó</label>
            <input type="text" class="form-control" id="description" placeholder="Thông tin" name="description">
