<div class="mt-4">
    <div class="row">
        {{#each Cats}}
            <div class="col-sm-6 col-lg-4">
                <div class="card">
                    <a href="/cat/{{this.slug}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" width="340" height="260">
                    </a>
                    <div class="card-body">
                        <a href="/cat/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/cat/{{this.slug}}" class="btn btn-primary">Xem</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
